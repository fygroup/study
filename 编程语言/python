class a:
	def __init__(self):
		pass

	def read(self,file):
		element=file.split('\n')
		for i in element:
			if i.startswith('a'):
				self.func(i)

	def func(self,data):
		pass

class b(a):
	def __init__(self):
		a.__init__(self)

	def func(self,data):	
		print(data)

